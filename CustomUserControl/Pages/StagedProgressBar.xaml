<Page x:Class="CustomUserControl.Pages.StagedProgressBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CustomUserControl.Pages"
      xmlns:h="clr-namespace:HelperLibrary;assembly=HelperLibrary"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StagedProgressBar">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <h:StagedProgressBar x:Name="StagedPBar"/>

        <Slider Grid.Row="1" Minimum="0.0" Maximum="100.0" ValueChanged="Slider_ValueChanged" Margin="20"/>
    </Grid>
</Page>
