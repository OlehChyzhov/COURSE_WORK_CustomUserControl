<Page x:Class="CustomUserControl.Chapter3.Pages.DependencyPropExamplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CustomUserControl.Chapter3.Pages"
      xmlns:c="clr-namespace:CustomUserControl.Chapter3.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DependencyPropExamplePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <c:CustomControl x:Name="Ctrl"/>
        <Button Content="Змінити залежну властивість" Width="250" Height="50" Click="Button_Click"/>
        <TextBox Grid.Row="1" Width="250" Height="50" BorderThickness="2" BorderBrush="Black" x:Name="TextB"/>
    </Grid>
</Page>
