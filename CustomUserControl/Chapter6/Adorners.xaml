                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF356167" Offset="0.911"/>
                    <GradientStop Color="#FF9CCBD1" Offset="0.21"/>
                    <GradientStop Color="#FF476F75" Offset="0.643"/>
                </LinearGradientBrush>
            </local:RBtnGroupChapter6.Background>
            <local:RBtnGroupChapter6.RadioButtons>
                <RadioButton Content="Сенді Чікс"/>
                <RadioButton Content="Юджин Крабс"/>
                <RadioButton Content="Ґері Уілсон"/>
