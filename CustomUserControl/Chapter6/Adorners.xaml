                <RadioButton Content="Сквідвард Джей Куїнсі"/>
                <RadioButton Content="Патрік зірка"/>
            </local:RBtnGroupChapter6.RadioButtons>
            
            <local:RBtnGroupChapter6.AdditionalInformation>
                <sys:String x:Key="Сенді Чікс">Білочка</sys:String>
                <sys:String x:Key="Юджин Крабс">Скнара</sys:String>
